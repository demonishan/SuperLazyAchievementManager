<Window x:Class="SAM.Picker.Modern.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:SAM.Picker.Modern" mc:Ignorable="d" Title="SAM 2025" Height="700" Width="1000" WindowStyle="None" AllowsTransparency="True" Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI Variable Display, Segoe UI, sans-serif" ResizeMode="CanResizeWithGrip">
            <WindowChrome.WindowChrome>
                <WindowChrome CaptionHeight="40" GlassFrameThickness="0" CornerRadius="0"/>
            </WindowChrome.WindowChrome>
            <Window.Resources>
                <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#DDDDDD"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3E3E42"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E81123"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="ActionButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3E3E42"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Window.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Custom Title Bar -->
                <Grid Grid.Row="0" Background="#252526">
                    <TextBlock Text="Steam Achievement Manager 2025" VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#DDDDDD"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="&#xE921;" Width="46" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button x:Name="MaximizeBtn" Content="&#xE922;" Width="46" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="&#xE8BB;" Width="46" Click="Close_Click" Style="{StaticResource CloseButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </Grid>
                <!-- Main Content Area -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Search Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Select a Game" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" CornerRadius="8" Background="#2D2D30" Height="40">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <TextBlock x:Name="SearchPlaceholder" Text="Search games..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#888888" IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Foreground="White" Padding="15,0,5,0" FontSize="16" CaretBrush="White"/>
                                    </Grid>
                                    <Button x:Name="ClearSearchBtn" Grid.Column="1" Content="&#xE711;" Background="Transparent" BorderThickness="0" Foreground="#888888" FontFamily="Segoe MDL2 Assets" FontSize="12" Width="30" Height="40" Click="ClearSearch_Click" Cursor="Hand" Margin="0,0,5,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                            <Button Grid.Column="2" Content="&#xE72C;" Width="40" Height="40" Click="Refresh_Click" Style="{StaticResource ActionButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="16" ToolTip="Refresh Game List"/>
                            <Button Grid.Column="4" Content="&#xE71C;" Width="40" Height="40" Click="Filter_Click" Style="{StaticResource ActionButtonStyle}" ContextMenuService.Placement="Bottom" FontFamily="Segoe MDL2 Assets" FontSize="16" ToolTip="Filter Games">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="FilterGames" Header="Show Games" IsCheckable="True" IsChecked="True" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterMods" Header="Show Mods" IsCheckable="True" IsChecked="False" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterDemos" Header="Show Demos" IsCheckable="True" IsChecked="False" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterJunk" Header="Show Junk" IsCheckable="True" IsChecked="False" Click="FilterOption_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </StackPanel>
                    <!-- Game Grid -->
                    <ListView x:Name="GameList" Grid.Row="1" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="220" ItemHeight="150"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200" Height="130" Margin="10" Background="#252526" CornerRadius="12" Padding="0" ClipToBounds="True" MouseLeftButtonUp="Game_Click" Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <!-- Game Image -->
                                        <Border Grid.Row="0" Height="70" Background="#333333">
                                            <Image Source="{Binding Image}" Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Grid.Row="1" Text="{Binding Name}" Foreground="White" Margin="10" TextWrapping="Wrap" FontWeight="SemiBold" FontSize="13"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Window>
