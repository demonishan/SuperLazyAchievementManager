                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                    <TextBox Text="{Binding TimerMinutes, UpdateSourceTrigger=PropertyChanged}" Width="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Background="#333337" Foreground="White" BorderThickness="0" Padding="5">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=IsTimerMode}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Grid x:Name="LoadingOverlay" Background="#B21E1E1E" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource Icon.Refresh}" Width="32" Height="32" Fill="White" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform><RotateTransform x:Name="Rotate" Angle="0"/></Path.RenderTransform>
                                        <Path.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="Rotate" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Path.Triggers>
                                    </Path>
                                    <TextBlock Text="Loading achievements..." Margin="0,15,0,0" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Window>
