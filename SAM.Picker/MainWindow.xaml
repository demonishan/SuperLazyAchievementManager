                                        <ContextMenu>
                                            <MenuItem Header="Name (A-Z)" Tag="Name_Asc" Click="SortOption_Click"/>
                                            <MenuItem Header="Name (Z-A)" Tag="Name_Desc" Click="SortOption_Click"/>
