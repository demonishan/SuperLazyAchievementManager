                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Min (m)" Foreground="#BBBBBB" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox x:Name="RandMinInput" Background="#333337" Foreground="White" BorderThickness="0" Padding="5" Text="10" HorizontalContentAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Max (m)" Foreground="#BBBBBB" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox x:Name="RandMaxInput" Background="#333337" Foreground="White" BorderThickness="0" Padding="5" Text="60" HorizontalContentAlignment="Center"/>
