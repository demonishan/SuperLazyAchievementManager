                        <Grid Grid.Row="0" Margin="20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Width="40" Height="40" Click="Back_Click" Style="{StaticResource ActionButtonStyle}">
                                <Path Data="{StaticResource Icon.Back}" Style="{StaticResource PathIconStyle}"/>
